{
    "name": "Volume Tweaker",
    "author": "Tripticon84",
    "manifest_version": 4,
    "target": "Tweak",
    "version": "v1.0",
    "description": "Add a bunch of option to customize the volume popup. Don't forget to disable the preview button.",
    "inject": {
        "shared.css": ["SP"]
    },

    "patches": {
        "Preview": {
            "type": "checkbox",
            "values": {
                "No": {},
                "Yes": {
                    "preview.css": ["SP"]
                }
            }
        },

        "Width": {
            "type": "slider",
            "default": "5",
            "values": {
                "1": { "width/1.css": ["SP"] },
                "2": { "width/2.css": ["SP"] },
                "3": { "width/3.css": ["SP"] },
                "4": { "width/4.css": ["SP"] },
                "5": { "width/5.css": ["SP"] },
                "6": { "width/6.css": ["SP"] },
                "7": { "width/7.css": ["SP"] },
                "8": { "width/8.css": ["SP"] },
                "9": { "width/9.css": ["SP"] },
                "10": { "width/10.css": ["SP"] }                
            }
        },

        "Round Corners": {
            "type":"slider",
            "default": "None",
            "values":{
                "None": {},
                "3px": { "round/3px.css": ["SP"] },
                "5px": { "round/5px.css": ["SP"] },
                "8px": { "round/8px.css": ["SP"] },
                "10px": { "round/10px.css": ["SP"] },
                "13px": { "round/13px.css": ["SP"] },
                "16px": { "round/16px.css": ["SP"] }
            }
        },

        "Volume animation": {
            "type": "checkbox",
            "values": {
                "No": {},
                "Yes": {
                    "animation.css": ["SP"]
                }
            }
        },

        "Speaker Icon": {
            "type":"checkbox",
            "values": {
                "Yes": {},
                "No": {
                    "speaker.css": ["SP"]
                }
            }
        }
    }
}